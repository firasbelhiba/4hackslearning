generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  INSTRUCTOR
  ADMIN
}

enum OrganizationStatus {
  ACTIVE
  SUSPENDED
}

enum OrganizationMemberRole {
  OWNER
  MEMBER
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum ResourceType {
  PDF
  LINK
  CODE
  FILE
  VIDEO
  IMAGE
}

enum LessonType {
  VIDEO
  ARTICLE
  QUIZ
}

enum LessonStatus {
  DRAFT
  PUBLISHED
}

enum QuestionType {
  SINGLE_CHOICE
  MULTIPLE_CHOICE
  TRUE_FALSE
  SHORT_ANSWER
}

enum EnrollmentStatus {
  ACTIVE
  COMPLETED
  EXPIRED
}

enum ThemePreference {
  LIGHT
  DARK
  SYSTEM
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  name          String
  avatar        String?
  bio           String?
  role          UserRole @default(STUDENT)
  isActive      Boolean  @default(true)
  refreshToken  String?

  // Notification preferences
  emailCourseUpdates    Boolean @default(true)  // New lessons, course updates
  emailNewCourses       Boolean @default(true)  // New courses in enrolled categories
  emailCompletionReminders Boolean @default(true) // Reminders to complete courses
  emailCertificates     Boolean @default(true)  // Certificate earned notifications
  emailMarketing        Boolean @default(false) // Promotional emails, newsletter

  // Certificate settings
  certificateDisplayName String?  // Custom name shown on certificates (defaults to user name)
  linkedinAutoShare      Boolean @default(false) // Auto-share certificates to LinkedIn

  // Appearance settings
  theme    ThemePreference @default(SYSTEM) // Light, Dark, or System
  language String          @default("en")   // Interface language (en, fr, ar, etc.)

  // Privacy & Security settings
  twoFactorEnabled      Boolean @default(false) // 2FA enabled
  twoFactorSecret       String?                 // 2FA secret key (encrypted)
  profileVisibility     String  @default("public") // public, private
  showOnLeaderboard     Boolean @default(true)  // Show progress on leaderboards

  // Relations
  coursesCreated        Course[]               @relation("InstructorCourses")
  enrollments           Enrollment[]
  quizAttempts          QuizAttempt[]
  certificates          Certificate[]
  organizationMembers   OrganizationMember[]
  sessions              UserSession[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("users")
}

model Organization {
  id          String             @id @default(uuid())
  name        String
  slug        String             @unique
  logo        String?
  description String?
  website     String?
  status      OrganizationStatus @default(ACTIVE)

  // Relations
  members              OrganizationMember[]
  courses              Course[]
  certificateTemplates CertificateTemplate[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("organizations")
}

model OrganizationMember {
  id             String                 @id @default(uuid())
  role           OrganizationMemberRole @default(MEMBER)

  // Relations
  organizationId String
  organization   Organization           @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String
  user           User                   @relation(fields: [userId], references: [id], onDelete: Cascade)

  joinedAt       DateTime               @default(now())

  @@unique([organizationId, userId])
  @@map("organization_members")
}

model CertificateTemplate {
  id             String       @id @default(uuid())
  name           String
  templateConfig Json         // JSON config for template design
  isDefault      Boolean      @default(false)

  // Relations
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("certificate_templates")
}

model Course {
  id               String       @id @default(uuid())
  title            String
  slug             String       @unique
  description      String
  shortDescription String
  thumbnail        String?
  promoVideoUrl    String?      // Promotional video for course preview
  level            CourseLevel  @default(BEGINNER)
  category         String
  tags             String[]
  price            Float        @default(0)
  isFree           Boolean      @default(true)
  isPublished      Boolean      @default(false)

  // Course metadata (Udemy-style)
  requirements     String[]     // What students need before taking the course
  targetAudience   String[]     // Who this course is for
  outcomes         String[]     // What students will learn (learning objectives)
  language         String       @default("English")
  totalDuration    Int?         // Total duration in seconds (calculated)

  // Relations
  instructorId     String
  instructor       User         @relation("InstructorCourses", fields: [instructorId], references: [id])
  organizationId   String?
  organization     Organization? @relation(fields: [organizationId], references: [id])
  modules          Module[]
  enrollments      Enrollment[]
  certificates     Certificate[]

  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  @@map("courses")
}

model Module {
  id          String   @id @default(uuid())
  title       String
  description String?
  order       Int
  outcomes    String[] // What students will learn in this section

  // Relations
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons     Lesson[]
  quiz        Quiz?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("modules")
}

model Lesson {
  id            String       @id @default(uuid())
  title         String
  description   String?
  content       String?      // Rich text content for article lessons
  videoUrl      String?
  vimeoVideoId  String?      // Vimeo video ID for embedded player (deprecated)
  cloudinaryPublicId String? // Cloudinary public ID for video
  cloudinaryUrl String?      // Cloudinary video URL
  videoDuration Int?         // Duration in seconds
  order         Int
  type          LessonType   @default(VIDEO)
  status        LessonStatus @default(DRAFT)
  isFreePreview Boolean      @default(false) // Allow free preview for marketing

  // Relations
  moduleId      String
  module        Module     @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  resources     Resource[]
  progress      LessonProgress[]

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@map("lessons")
}

model Resource {
  id          String       @id @default(uuid())
  title       String
  type        ResourceType
  url         String
  fileSize    Int?         // File size in bytes
  order       Int          @default(0)
  isDownloadable Boolean   @default(true)

  // Relations
  lessonId String
  lesson   Lesson       @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  createdAt DateTime    @default(now())

  @@map("resources")
}

model Quiz {
  id           String     @id @default(uuid())
  title        String
  description  String?
  passingScore Int        @default(70) // Percentage
  timeLimit    Int?       // In minutes

  // Relations
  moduleId     String     @unique
  module       Module     @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  questions    Question[]
  attempts     QuizAttempt[]

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@map("quizzes")
}

model Question {
  id          String       @id @default(uuid())
  text        String
  type        QuestionType
  options     Json         // Array of { id, text, isCorrect }
  explanation String?
  points      Int          @default(1)
  order       Int

  // Relations
  quizId      String
  quiz        Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([quizId, order])
  @@map("questions")
}

model QuizAttempt {
  id          String    @id @default(uuid())
  score       Int
  maxScore    Int
  percentage  Float
  passed      Boolean
  answers     Json      // Array of { questionId, answer, isCorrect, points }

  // Relations
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  quizId      String
  quiz        Quiz      @relation(fields: [quizId], references: [id], onDelete: Cascade)

  startedAt   DateTime  @default(now())
  completedAt DateTime?

  @@map("quiz_attempts")
}

model Enrollment {
  id         String           @id @default(uuid())
  progress   Float            @default(0) // Percentage 0-100
  status     EnrollmentStatus @default(ACTIVE)

  // Relations
  userId     String
  user       User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId   String
  course     Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessonProgress LessonProgress[]

  enrolledAt  DateTime        @default(now())
  completedAt DateTime?

  @@unique([userId, courseId])
  @@map("enrollments")
}

model LessonProgress {
  id             String     @id @default(uuid())
  watchedSeconds Int        @default(0)
  completed      Boolean    @default(false)

  // Relations
  enrollmentId   String
  enrollment     Enrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  lessonId       String
  lesson         Lesson     @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  completedAt    DateTime?
  updatedAt      DateTime   @updatedAt

  @@unique([enrollmentId, lessonId])
  @@map("lesson_progress")
}

model Certificate {
  id         String   @id @default(uuid())
  uniqueCode String   @unique
  pdfUrl     String?

  // Relations
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId   String
  course     Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  issuedAt   DateTime @default(now())

  @@unique([userId, courseId])
  @@map("certificates")
}

model UserSession {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  deviceName   String?  // e.g., "Chrome on Windows"
  deviceType   String?  // e.g., "desktop", "mobile", "tablet"
  browser      String?  // e.g., "Chrome", "Firefox"
  os           String?  // e.g., "Windows 11", "macOS"
  ipAddress    String?
  location     String?  // e.g., "New York, US"

  isCurrentSession Boolean @default(false)
  lastActiveAt DateTime @default(now())
  createdAt    DateTime @default(now())
  expiresAt    DateTime

  @@map("user_sessions")
}
